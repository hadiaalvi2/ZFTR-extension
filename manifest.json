{
  "manifest_version": 3,
  "name": "ZTR - Files & Folders Transfer",
  "version": "1.0.0",
  "description": "Upload files or folders by dropping them anywhere in this window. Unlimited transfers.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}